# Database
DATABASE_URL=

# Session
SESSION_SECRET=

# Replit Authentication
REPLIT_DOMAINS=
ISSUER_URL=

# TRANSCRIPTION PROVIDER CONFIGURATION
# Set to 'openai' or 'google' to choose your transcription provider
TRANSCRIPTION_PROVIDER=openai

# OpenAI Configuration (required if TRANSCRIPTION_PROVIDER=openai)
OPENAI_API_KEY=

# Google Cloud Configuration (required if TRANSCRIPTION_PROVIDER=google)
# Option 1: Use a service account key file
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json

# Option 2: Use default credentials (for Google Cloud environments)
GOOGLE_CLOUD_PROJECT=your-project-id

# Additional Google Cloud configuration (optional)
# GOOGLE_APPLICATION_CREDENTIALS_JSON={"type":"service_account","project_id":"..."}
